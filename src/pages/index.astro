---
import config from '../configs/config.js';

import Layout from '../layouts/Layout.astro';
import Profile from '../components/Profile.astro';
import SocialLinks from '../components/SocialLinks.astro';
import LinkButton from '../components/LinkButton.astro';
import ProductLink from '../components/ProductLink.astro';
import {Availability} from "../types";
---

<Layout title={`${config.user.name} - Link in Bio`} description={config.user.bio} image={config.user.profileImage}>
    <div class="mx-auto px-4 py-8 sm:max-w-xl md:max-w-2xl lg:max-w-3xl xl:max-w-4xl">
        <main class="container mx-auto">
            <Profile/>
            <SocialLinks/>
            <div class="space-y-4 mt-6">
                {config.links.map((link) => (
                        <LinkButton title={link.title} url={link.url} icon={link.icon} description={link.description}/>))}
            </div>
            <div class="space-y-4 mt-6">
                {config.products.map((product) => (
                        <ProductLink
                                title={product.title}
                                description={product.description}
                                url={product.url}
                                price={product.price}
                                includePriceOnSite={product.includePriceOnSite}
                                image={product.image}
                                availability={product.availability as Availability}
                        />))}
            </div>
        </main>
    </div>
</Layout>
