---
import {Icon} from 'astro-icon/components';

export interface Props {
    title: string;
    url: string;
    icon?: string;
}

const {title, url, icon} = Astro.props;
---

<a
        href={url}
        target="_blank"
        rel="noopener noreferrer"
        class="block w-full md:max-w-[50vw] mx-auto bg-white shadow-md rounded-lg overflow-hidden hover:shadow-lg transition duration-300 border-solid border-2 border-slate-950 py-3 px-4 flex items-center justify-center"
>
    {icon &&
            <Icon name={icon} class="h-6 mr-2"/>}
    <span>{title}</span>
</a>
